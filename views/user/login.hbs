{{#extends "base"}}
  {{#block "content"}}
    <form method="POST">
      <div>
        <label class="form-label">
          Email
        </label>
        <input type="text" name="email" class="form-control" />
      </div>
      <div>
        <label class="form-label">
          Password
        </label>
        <input type="password" name="password" class="form-control" />
      </div>
      <input type="submit" value="Register" />
    </form>
  {{/block}}
{{/extends}}